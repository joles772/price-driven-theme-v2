{% schema %}
{
  "name": "t:sections.scrolling-banner.name",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": [
      "footer"
    ]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-2"
    },
    {
      "type": "range",
      "id": "scroll_speed",
      "min": 5,
      "max": 45,
      "step": 1,
      "unit": "s",
      "label": "t:sections.scrolling-banner.settings.scroll-speed.label",
      "default": 15
    },
    {
      "type": "select",
      "id": "scroll_direction",
      "options": [
        {
          "value": "direction-left",
          "label": "t:sections.scrolling-banner.settings.direction-left.label"
        },
        {
          "value": "direction-right",
          "label": "t:sections.scrolling-banner.settings.direction-right.label"
        }
      ],
      "default": "direction-left",
      "label": "t:sections.scrolling-banner.settings.scroll-direction.label"
    },
		{
      "type": "range",
      "id": "items_padding",
      "min": 10,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Items padding",
      "default": 30
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 180,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 70
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 180,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 70
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.scrolling-banner.blocks.text.name",
      "limit": 5,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Add campaign or promotional text here</p>",
          "label": "t:sections.scrolling-banner.blocks.text.settings.text-item.label"
        }
      ]
    },
    {
      "type": "icon",
      "name": "t:sections.scrolling-banner.blocks.icon.name",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.multicolumn.blocks.column.settings.image.label"
        },
				{
					"type": "range",
					"id": "image_height",
					"min": 10,
					"max": 120,
					"step": 2,
					"unit": "px",
					"default": 50,
					"label": "Image height"
				}
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.scrolling-banner.name",
      "blocks": [
        {
          "type": "heading"
        }
      ]
    }
  ]
}
{% endschema %}
