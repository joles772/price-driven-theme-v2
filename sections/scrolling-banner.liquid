{{ 'section-scrolling-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #shopify-section-{{ section.id }} {
		--items-padding: {{ section.settings.items_padding }}px;
  }
  @media screen and (max-width: 749px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.57 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.57 | round: 0 }}px;
    }
  }
  @media screen and (min-width: 750px) and (max-width: 1199px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.72 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.72 | round: 0 }}px;
    }
  }
  @media screen and (min-width: 1200px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  #shopify-section-{{ section.id }} .scrolling-banner.direction-left > div {
    animation: scroll-left {{ section.settings.scroll_speed }}s linear infinite; 
  }
  #shopify-section-{{ section.id }} .scrolling-banner.direction-right > div {
    animation: scroll-right {{ section.settings.scroll_speed }}s linear infinite; 
  }
{%- endstyle -%}

<div class="scrolling-banner section-{{ section.id }}-padding {{ section.settings.scroll_direction }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} color-{{ section.settings.color_scheme }} gradient"{% if settings.animations_reveal_on_scroll %} data-cascade{% endif %}>

    <div>
      {%- for block in section.blocks -%}
        {% case block.type %}

          {%- when 'icon' -%}
						{%- style -%}
							#Icon-{{ block.id }}-{{ section.id }} {
								--icon-height: {{ block.settings.image_height }}px;
							}
						{%- endstyle -%}
            <div id="Icon-{{ block.id }}-{{ section.id }}" class="scrolling-item icon" {{ block.shopify_attributes }}>
              {% if block.settings.image != blank %}
                {%- assign widths = '165, 360, 535, 750' -%}
                {{
                  block.settings.image
                  | image_url: width: 500
                  | image_tag: loading: 'lazy', sizes: '500px', widths: widths
                }}
              {%- else -%}
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </div>

          {%- when 'heading' -%}
            <div class="scrolling-item rte h0" {{ block.shopify_attributes }}>
              {{ block.settings.text }}
            </div>

        {%- endcase -%}
      {%- endfor -%}
    </div>

    <div>
      {%- for block in section.blocks -%}
        {% case block.type %}
          {%- when 'icon' -%}
						{%- style -%}
							#Icon-{{ block.id }}-{{ section.id }} {
